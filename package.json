{
  "name": "@wpmedia/arc-themes-components",
  "version": "0.0.4-arc-themes-release-version-1-20.2",
  "description": "The arc-themes-components will be the basis for presentational components and reusable utility functions workflow of themes and client devs. A core tenet of Themes is composability for developers.",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watch -o --coverage",
    "test:changed-feature-branch": "jest --changedSince=origin/arc-themes-release-version-1.20 --coverage --passWithNoTests",
    "lint": "eslint --ext js --ext jsx src .storybook index.js",
    "lint:changed-feature-branch": "eslint --max-warnings 0 --no-error-on-unmatched-pattern $(git diff --name-only origin/arc-themes-release-version-1.20 | grep -E \"(.js$|.jsx$)\" || echo \"no js/jsx files changed\")",
    "lint:fix": "npm run lint -- --fix",
    "lint:styles": "stylelint '**/*.scss' --formatter verbose",
    "lint:styles:fix": "stylelint '**/*.scss' --fix",
    "generate:component": "hygen component new",
    "prepare": "husky install",
    "storybook": "start-storybook -p 60003",
    "storybook:build": "build-storybook",
    "format": "prettier --write ."
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WPMedia/arc-themes-components.git"
  },
  "files": [
    "index.js",
    "src/*",
    "scss.scss"
  ],
  "keywords": [
    "themes"
  ],
  "author": "",
  "license": "CC-BY-NC-ND-4.0",
  "bugs": {
    "url": "https://github.com/WPMedia/arc-themes-components/issues"
  },
  "homepage": "https://github.com/WPMedia/arc-themes-components#readme",
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@storybook/addon-a11y": "^6.4.14",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@storybook/theming": "^6.4.14",
    "@testing-library/dom": "^8.11.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "babel-jest": "^27.4.6",
    "chromatic": "^6.4.3",
    "css-loader": "^5.2.7",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort-exports": "^0.6.0",
    "husky": "^7.0.4",
    "hygen": "^6.1.0",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.4",
    "prettier": "2.5.1",
    "prop-types": "^15.8.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
